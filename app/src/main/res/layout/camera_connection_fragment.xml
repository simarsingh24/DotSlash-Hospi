<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_marginTop="16dp"
    android:layout_height="match_parent">

    <com.example.harsimar.hospi.OverlayView.AutoFitTextureView
        android:id="@+id/texture"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="250dp" />
    <LinearLayout
        android:layout_marginTop="16dp"
        android:id="@+id/camera_linearLayout"
        android:layout_below="@id/texture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#f43f67"
            android:layout_gravity="center_vertical"
            android:id="@+id/captured_imageView"
            android:padding="2dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:id="@+id/results"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24dp"
            />
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:layout_below="@id/camera_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:id="@+id/capture_button"
        android:layout_centerHorizontal="true"
        android:text="Capture"/>
    <com.example.harsimar.hospi.OverlayView.OverlayView
        android:id="@+id/debug_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
